<Application
    x:Class="DuckyProfileSwitcher.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DuckyProfileSwitcher"
    StartupUri="Views/MainWindow.xaml">

    <Application.Resources>
        <SolidColorBrush x:Key="DividerFill">#e0e0e0</SolidColorBrush>
        <SolidColorBrush x:Key="StatusHeaderEnabledBrush">#22bf71</SolidColorBrush>
        <SolidColorBrush x:Key="StatusHeaderDisabledBrush">#ff5252</SolidColorBrush>

        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="6,4" />
        </Style>

        <Style BasedOn="{StaticResource ButtonStyle}" TargetType="{x:Type Button}" />
    </Application.Resources>
</Application>
